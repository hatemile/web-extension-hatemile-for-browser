{
    "extends": "eslint:recommended",
    "rules": {
        "no-alert": "error",    
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-control-regex": "off",
        "no-empty": "off",
        "no-eval": "error",
        "brace-style": "error",
        "comma-dangle": "error",
        "comma-spacing": "error",
        "comma-style": "error",
        "indent": [
            "error",
            4,
            {
                "CallExpression": {"arguments": 2},
                "MemberExpression": 2,
                "FunctionDeclaration": {"body": 1, "parameters": 2}
            }
        ],
        "max-len": "error",
        "no-tabs": "error",
        "no-trailing-spaces": "error",
        "no-whitespace-before-property": "error"
    }
}
